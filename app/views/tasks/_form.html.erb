<%= form_for(@task) do |f| %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <br />

  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control' %>
  </div>

  <br />

  <% if @task.new_record? == false %>
    <div class="form-group">
      <%= f.label :completed %>
      <%= f.check_box :completed %>
    </div>
  <% end %>

  <br />

  <div>
    <%= f.submit class: 'btn btn-primary' %>
  </div>

<% end %>

