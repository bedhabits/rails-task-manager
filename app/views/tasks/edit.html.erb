<div class="container">

  <h1>Edit Task</h1>

  <%= form_for(@task) do |f| %>

    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <br />

    <div class="form-group">
      <%= f.label :details %>
      <%= f.text_field :details, class: 'form-control' %>
    </div>

    <br />

    <div class="form-group">
      <%= f.label :completed %>
      <%= f.check_box :completed %>
    </div>

    <br />
<hr>
    <div>
      <%= f.submit class: 'btn btn-primary' %>
    </div>

  <% end %>

</div>
